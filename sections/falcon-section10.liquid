<style>

  .section-moving-car{
    background: url(https://cdn.shopify.com/s/files/1/0684/8823/3178/t/3/assets/tt-promo-02-moving-bg.jpg?v=1706884056) 0 0 repeat;
    animation: bgLeftToRight 1s linear infinite;
    overflow: hidden;
  }


  .section-moving-car {
    margin-right: auto;
    margin-left: auto;
    display: flex;
    justify-content: center;
  }

    .wheel2, .wheel1 {
      animation: rotate .7s linear infinite;  
    }

    .cone1, .cone2{
      {% comment %} transform: translateX(0px); {% endcomment %}
      animation: LefttoRight 5s linear infinite; 
    }

    .wheels {
      display: flex;
      flex-direction: row;
      flex-wrap: nowrap;
      justify-content: space-evenly;
      align-items: center;
    }

    .cones {
      margin-top: -12rem;
      display: flex;
      margin-left: 12rem;
      justify-content: center;
  }

    img.wheel.wheel1 {
      margin-left: -13rem;
      margin-right: -10rem;
      margin-top: -23rem;
        
    }

    img.wheel.wheel2 {
      margin-top: -23rem;
    }

    @keyframes bgLeftToRight {
      from {
          background-position: 0 0 ;
      }
      to {
          background-position: 100% 0 ;
      }
  }

    @keyframes rotate {
      from {
        transform: rotate(360deg);
      }
      to {
        transform: rotate(0deg);
      }
    }

    @keyframes LefttoRight {
      from {
        transform: translateX(0);
      }
      to {
        transform: translateX(100%); /* Adjust the distance as needed */
      }
    }

</style>



