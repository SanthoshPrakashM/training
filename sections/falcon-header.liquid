<div class="falcon-header header-container" id="myHeader">
    <img class="falcon-logo" src="{{ section.settings.logo | img_url: 'medium' }}" >
    <ul class="ul" id="nav-menu">
        <li class="li">
            <a class="a" href="https://how-do-i-tell-you.myshopify.com/">
                <span>{{ section.settings.option1 }}</span>
                <span>{{ section.settings.option1 }}</span>
            </a>
        </li>
        
        <li class="li">
            <a class="a" href="">
                <span>{{ section.settings.option2 }}</span>
                <span>{{ section.settings.option2 }}</span>
            </a>
        </li>
        
        <li class="li">
            <a class="a" href="https://shopify.theopenxpress.com/collections/all">
                <span>{{ section.settings.option3 }}</span>
                <span>{{ section.settings.option3 }}</span>
            </a>
        </li>
        
        <li class="li">
            <a class="a" href="">
                <span>{{ section.settings.option4 }}</span>
                <span>{{ section.settings.option4 }}</span>
            </a>
        </li>
        
        <li class="li">
            <a class="a" href="">
                <span>{{ section.settings.option5 }}</span>
                <span>{{ section.settings.option5 }}</span>
            </a>
        </li>
        
        <li class="li">
            <a class="a" href="">
                <span>{{ section.settings.option6 }}</span>
                <span>{{ section.settings.option6 }}</span>
            </a>
        </li>

        {% if customer %}
            <li class="li7">
                <a class="a">
                    <span>
                        <a class="log" >
                            <a href="https://shopify.theopenxpress.com/account#/profile" class="header__icon header__icon--account link focus-inset small-hide">
                                <svg xmlns="http://www.w3.org/2000/svg" aria-hidden="true" focusable="false" class="icon icon-account" fill="none" viewBox="0 0 18 19">
                                <path fill-rule="evenodd" clip-rule="evenodd" d="M6 4.5a3 3 0 116 0 3 3 0 01-6 0zm3-4a4 4 0 100 8 4 4 0 000-8zm5.58 12.15c1.12.82 1.83 2.24 1.91 4.85H1.51c.08-2.6.79-4.03 1.9-4.85C4.66 11.75 6.5 11.5 9 11.5s4.35.26 5.58 1.15zM9 10.5c-2.5 0-4.65.24-6.17 1.35C1.27 12.98.5 14.93.5 18v.5h17V18c0-3.07-.77-5.02-2.33-6.15-1.52-1.1-3.67-1.35-6.17-1.35z" fill="currentColor">
                                </path></svg>
                      
                                <span class="visually-hidden">Log in</span>
                            </a>
                        
                        </a>
                    </span>
                </a>
            </li>
        {% else %}
            <li class="li7">
                <a class="a" href="">
                    <span><a class="log" href="https://shopify.theopenxpress.com/account/login">{{ section.settings.option7 }}</a>/<a class="reg" href="https://shopify.theopenxpress.com/account/register">{{ section.settings.option8 }}</a></span>
                </a>
            </li>
        {% endif %}

        <a href="{{ routes.cart_url }}" class="header__icon header__icon--cart link focus-inset" id="cart-icon-bubble">
            {%- liquid
              if cart == empty  
                render 'icon-cart-empty'
              else
                render 'icon-cart'
              endif
            -%}
            <span class="visually-hidden">{{ 'templates.cart.cart' | t }}</span>
            {%- if cart != empty -%}
              <div class="cart-count-bubble">
                {%- if cart.item_count < 100 -%}
                  <span aria-hidden="true">{{ cart.item_count }}</span>
                {%- endif -%}
                <span class="visually-hidden">{{ 'sections.header.cart_count' | t: count: cart.item_count }}</span>
              </div>
            {%- endif -%}
          </a>
    </ul>

    <label for="nav_check" class="hamburger">
        <div></div>
        <div></div>
        <div></div>
    </label>
</div>

<script>

    window.onscroll = function() {myFunction()};

    var header = document.getElementById("myHeader");
    var sticky = header.offsetTop;

    function myFunction() {
        if (window.pageYOffset > sticky) {
            header.classList.add("sticky");
        } else {
            header.classList.remove("sticky");
        }
    }

</script>



<style>


    a#cart-icon-bubble {
        margin-top: -10px;
    }

    svg.icon.icon-account {
        margin-top: -25px;
    }

    .falcon-header.sticky {
        background-color: #ffffff;
        position: fixed;
        top: 0;
        width: 100%;
        {% comment %} padding: 10px; {% endcomment %}
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        margin: 0px;
        margin-left: 0%;
    }

    .sticky img{
        display: none;
    }
    .sticky .ul {
        margin-left: -12%;
    }

    .sticky {
        padding: 20px;
    }

    .sticky .log {
        color: grey;
        margin-left: 300px;
        text-transform: uppercase;
        font-weight: bold;
    }

    .sticky .reg {
        color: grey;
        text-transform: uppercase;
        font-weight: bold;
    }


    .falcon-header {
        display: flex;
        flex-direction: row;
        flex-wrap: nowrap;
        justify-content: center;
        align-items: center;
        margin: 25px;
        margin-left: 20%;
        position: relative;
        z-index: 1000;
    }

    ul.ul {
        margin-left: 150px;
    }
    
    .ul {
        display: flex;
        margin: 0 10px;
    }
    
    .ul .li, .li7  {
        list-style: none;
        margin: 0 10px;
        position: relative;
    }
    
    .ul .li .a  {
        display: block;
        font-weight: 600;
        height: 25px;
        overflow: hidden;
        position: relative;
        text-decoration: none;
        text-transform: uppercase;
    }

    .li7{
        display: flex;

        padding-top: 2px;
        color: #121212;
        height: 20px;
        position: relative;
        text-decoration: none !important;
        font-size: small;

    }

    .log, .reg{
        color: #121212;
        text-decoration: none !important;
    }

    .log:hover, .reg:hover{
        color: #fdc400;
    }
    
    .ul .li .a span {
        color: #121212;
        display: block;
        height: 100%;
        transition: transform 0.5s ease;
        width: 100%;
    }

    .ul:hover .li:hover .a:hover span:hover {
        color: #fdc400;
    }
    
    
    .ul .li:hover .a span:nth-child(1) {
        transform: translateY(-100%);
    }
    
    .ul .li .a span:nth-child(2) {
        color: #fdc400;
    }
    
    .ul .li:hover .a span:nth-child(2) {
        transform: translateY(-100%);
    }
</style>


