<section class="custom-sliding-section">
    <div class="hc-index-slider scroll">  
      <div class="hc-slide-track">
          {% for block in section.blocks %}
            <div class="hc-slide">
              <div class="text-wrapper">
                <img src="{{ block.settings.brand-logo | image_url: width: 50 }}">
                <p class="text">{{ block.settings.texts }}</p>
              </div>
            </div>
          {% endfor %}
      </div>  
    </div>

<style>
  
    .hc-index-slider .hc-slide-track {
        display: flex;
        flex-wrap: nowrap;
        align-content: center;
        justify-content: center;
        align-items: center;
        background: url(https://cdn.shopify.com/s/files/1/0684/8823/3178/files/fal_ban_bg_150x.jpg?v=1706770555) 0 0 repeat;
      }

    .text-wrapper {
        display: inline-flex;
        flex-direction: row;
        flex-wrap: nowrap;
        align-content: center;
        justify-content: space-evenly;
        align-items: center;
      }

      strong {
        font-size: -webkit-xxx-large;
        color: #ffffff;
        line-height: 1;
      }
      
      .hc-index-slider
        .hc-slide-track {
        display: flex;
        flex-wrap: nowrap;
        align-content: center;
        justify-content: space-evenly;
        align-items: center;
      }
    
    .hc-slide img {
        display: inline;
        margin-bottom: 0;
        height:50px;
        width:50px;
    }
      
      .hc-index-slider {
        margin: auto;
        overflow: hidden;
        position: relative;
        --width: 250px;
      }
      .hc-index-slider .hc-slide-track {
        display: flex;
      }
      
      .hc-index-slider .hc-slide {
        width: var(--width);
        display: flex;
        justify-content: center;
        background: rgba(77, 77, 77, 0.4);  /*done by sandy*/
        {% comment %} -webkit-transform: skew(-22deg); {% endcomment %}
      }
      


      @media only screen and (max-width: 1024px) {
        .text-wrapper {
          
          width: 100%;
          margin-left: 30px;
        }
      }
</style>
</section>


    {% schema %}
      {
      "name": "Falcon Section 3",
      "tag": "section",
      "class": "section3",
      "settings": [
        {
          "type": "image_picker",
          "label": "Background",
          "id": "bg-img"
        }
      ],
      
        "name": "Falcon Section 3",
        "blocks": [
        {
          "name": "Display instructions",
          "type": "block",
          "settings": [
            {
              "type": "image_picker",
              "label": "Brand Logo",
              "id": "brand-logo"
            },
            {
              "type": "richtext",
              "id": "texts",
              "label": "Information"
            }   
          ]
        }
      ],
      "presets": [
        {
          "name": "Falcon Section 3"
        }
      ],
      "enabled_on": {
        "templates": ["*"]
      }
      }
    {% endschema %}
    
    