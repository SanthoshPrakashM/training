<div class="custom-rich-text">
    <div class="heading1-star">
        <div class="heading1-rich-text">
            <h1 class="heading1">{{ section.settings.heading1 }} </h1>
        </div>

        <div class="stars">

            {%- if section.settings.icon-count == 5 -%}
                {% for i in (1..5) %}
                    <img src="{{ section.settings.icon | img_url: '50x' }}">
                {% endfor %}

                {%- elsif section.settings.icon-count == 4 -%}
                    {% for i in (1..5) %}
                        {% if i > 4 %}              {% comment %}   when i = 5 it prints 1 empty star  {% endcomment %}
                            <img src="{{ section.settings.non-icon | img_url: '50x' }}">
                          {% else %}
                              <img src="{{ section.settings.icon | img_url: '50x' }}">
                        {% endif %}
                    {% endfor %}
               
                {%- elsif section.settings.icon-count == 3 -%}
                    {% for i in (1..5) %}
                        {% if i > 3 %}              {% comment %}   when i = 4 it prints 2 empty star  {% endcomment %}
                            <img src="{{ section.settings.non-icon | img_url: '50x' }}">
                          {% else %}
                              <img src="{{ section.settings.icon | img_url: '50x' }}">
                          {% endif %}
                    {% endfor %}
                   
                {%- elsif section.settings.icon-count == 2 -%}
                    {% for i in (1..5) %}
                        {% if i > 2 %}              {% comment %}   when i = 3 it prints 3 empty star  {% endcomment %}
                            <img src="{{ section.settings.non-icon | img_url: '50x' }}">
                          {% else %}
                              <img src="{{ section.settings.icon | img_url: '50x' }}">
                          {% endif %}
                    {% endfor %}
               
                {%- elsif section.settings.icon-count == 1 -%}
                    {% for i in (1..5) %}   
                        {% if i > 1 %}              {% comment %}   when i = 2 it prints 4 empty star  {% endcomment %}
                            <img src="{{ section.settings.non-icon | img_url: '50x' }}">
                          {% else %}
                              <img src="{{ section.settings.icon | img_url: '50x' }}">
                          {% endif %}
                    {% endfor %}

                {%- elsif section.settings.icon-count == 0.5 -%}
                    {% for i in (1..5) %}
                        {% if i > 1 %}              
                            <img src="{{ section.settings.non-icon | img_url: '50x' }}">
                          {% else %}
                              <img src="{{ section.settings.half-icon | img_url: '50x' }}">
                          {% endif %}
                    {% endfor %}

                {%- elsif section.settings.icon-count == 1.5 -%}
                    {% for i in (1..4) %}
                        {% if i > 1 %}
                            <img src="{{ section.settings.non-icon | img_url: '50x' }}">
                          {% else %}
                              <img src="{{ section.settings.icon | img_url: '50x' }}">
                              <img src="{{ section.settings.half-icon | img_url: '50x' }}">
                          {% endif %}
                    {% endfor %}

                {%- elsif section.settings.icon-count == 2.5 -%}
                    {% for i in (1..3) %}
                        {% if i > 1 %}
                            <img src="{{ section.settings.non-icon | img_url: '50x' }}">
         
                          {% else %}
                              {% for i in (1..2) %}
                                <img src="{{ section.settings.icon | img_url: '50x' }}">
                              {% endfor %}
                                <img src="{{ section.settings.half-icon | img_url: '50x' }}">
                          {% endif %}
                    {% endfor %}

               {%- elsif section.settings.icon-count == 3.5 -%}
                    {% for i in (1..2) %}
                        {% if i > 1 %}
                            <img src="{{ section.settings.non-icon | img_url: '50x' }}">
         
                          {% else %}
                              {% for i in (1..3) %}
                                <img src="{{ section.settings.icon | img_url: '50x' }}">
                              {% endfor %}
                                <img src="{{ section.settings.half-icon | img_url: '50x' }}">
                          {% endif %}
                    {% endfor %}

              {%- elsif section.settings.icon-count == 4.5 -%}
                    {% for i in (1..2) limit:1 %}
                        {% if i > 1 %}
                            <img src="{{ section.settings.non-icon | img_url: '50x' }}">
         
                          {% else %}
                              {% for i in (1..4) %}
                                <img src="{{ section.settings.icon | img_url: '50x' }}">
                              {% endfor %}
                                <img src="{{ section.settings.half-icon | img_url: '50x' }}">
                          {% endif %}
                    {% endfor %}
                {%- endif -%}
        </div>
    </div>
       
    <div class="heading2-rich-text">
        <h1 class="heading2">{{ section.settings.heading2 }}</h1>
    </div>
</div>


<style>

    .custom-rich-text {
        text-align: center;
    }

    .heading1-star{
        display: flex;
        flex-direction: row;
        flex-wrap: nowrap;
        justify-content: center;
        align-items: center;
    }

    .heading1-rich-text h1{
        font-family: system-ui;
        font-size: 400%;
        font-weight: 800;
        padding-right: 30px;
        /* margin-top: 0px; */
    }

    .heading2-rich-text h1{
        font-family: system-ui;
        font-size: 400%;
        font-weight: 800;
        line-height: 0;
        margin: -40px;
    }

    .stars img {
        padding: 1px;
        height: 70px;
        width: 70px;
        padding-top: 10px;
        /* margin-top: 0px;  */
    }

    .stars {
        /* margin-top: -50px; */
    }

</style>

{% schema %}
  {
    "name": "Custom Rich Text",
    "tag": "section",
    "class": "custom-rich-text",
    "settings": [
        {
          "type": "richtext",
          "id": "heading1",
          "label": "Heading1",
          "default":"<h1>+5,000</h1>"
        },
        {
            "type": "richtext",
            "id": "heading2",
            "label": "Heading2",
            "default":"<h1>five Star Reviews</h1>"
        },
        {
            "type": "image_picker",
            "id": "icon",
            "label": "Glow Star Icon"
        },
        {
            "type": "image_picker",
            "id": "half-icon",
            "label": "Half Glow Star Icon"
        },
        {
            "type": "image_picker",
            "id": "non-icon",
            "label": "Non Glow Star Icon"
        },
        {
          "type": "range",
          "id": "icon-count",
          "min": 0.5,
          "max": 5,
          "step": 0.5,
          "unit": "px",
          "label": "Ratings",
          "default": 5
        }
    ],
    "presets": [
      {
        "name": "Custom Rich Text",
        "settings": {
        }
      }
    ],
    "enabled_on": {
      "templates": ["*"]
    }
  }
{% endschema %}